<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出路径：sd卡根目录test/BleConfig" />
    <!--从asset目录复制文件到手机内存中-->
    <Button
        android:id="@+id/tv_file_out_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出模板" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出路径：sd卡根目录test/FileOut/singleSheet.xls" />
    <Button
        android:id="@+id/tv_file_out_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出List" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出路径：sd卡根目录test/FileOut/multiSheet.xls" />
  <Button
        android:id="@+id/tv_file_out_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="导出Lists" />

    <Button
        android:id="@+id/tv_file_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="导入文件" />

</LinearLayout>